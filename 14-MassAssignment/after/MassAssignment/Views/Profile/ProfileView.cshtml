@model MassAssignment.Employee
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProfileView</title>
</head>
<body>
    <div>
        <h4>Employee</h4>
        <hr />
        <table>
            @foreach (var p in ViewData.ModelMetadata.Properties)
            {
                if (p.PropertyName != "Employees1" && p.PropertyName != "Employee1")
                {
                    <tr>
                        <th style="text-align:left">@Html.Label(p.PropertyName, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                        <td>@Html.Display(p.PropertyName, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                }
            }
        </table>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
